{
  "name": "scrum-dice",
  "version": "0.1.0",
  "private": true,
  "lint-staged": {
    "src/**/*.{ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "if test \"$NODE_ENV\" = \"development\" ; then husky install ; fi \n",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t scrum-dice --secret id=npm,src=./.npmrc .",
    "docker:run": "docker run --env-file=.env --rm --name scrum-dice -p 3000:3000 -d scrum-dice",
    "docker:stop": "docker stop scrum-dice",
    "docker:dev": "docker-compose rm -fsv && COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker-compose build && docker-compose up && docker-compose rm -fsv"
  },
  "dependencies": {
    "@types/node": "18.15.10",
    "@types/react": "18.0.29",
    "@types/react-dom": "18.0.11",
    "axios": "^1.4.0",
    "classnames": "^2.3.2",
    "clipboard-copy": "^4.0.1",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "next": "13.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "simple-zustand-devtools": "^1.1.0",
    "socket.io-client": "^4.6.2",
    "swr": "^2.1.5",
    "typescript": "5.0.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.1.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.7",
    "tailwindcss": "^3.3.2"
  }
}
